{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Murder Arrests USA (normalised)",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_week9_homework/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "black"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_week9_homework/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CallumR2/3179_week9_homework/main/data/US_violent_crime.csv"
            },
            "key": "State",
            "fields": [
              "Murder"
            ]
          }
        },
        {
          "calculate": "datum.Murder",
          "as": "MurdersPer100k"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "geoshape"
          },
          "encoding": {
            "color": {
              "field": "MurdersPer100k",
              "type": "quantitative",
              "scale": {
                "type": "linear",
                "scheme": "plasma",
                "domain": [
                  0,
                  5,
                  10,
                  15,
                  20
                ]
              },
              "title": "Murder Arrests per 100k Pop"
            },
            "tooltip": [
              {
                "field": "properties.name",
                "type": "nominal",
                "title": "State"
              },
              {
                "field": "MurdersPer100k",
                "type": "quantitative",
                "title": "Murders"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CallumR2/3179_week9_homework/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_5"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "clear",
        "fillOpacity": 0,
        "stroke": "black",
        "strokeOpacity": 0.3
      }
    }
  ]
}
